<div id="container">
  <div id="inputNote">
    {{textarea placeholder="Add a title!" rows="1" cols="100" value=titleCopy }}
    {{textarea placeholder="Add a note!" rows="20" cols="100" value=noteCopy}}
    <button {{action 'newNote'}}>Add Note</button>
  </div>

  <div id="watchingNote">
    {{noteCopy}}
  </div>



  <hr>


  <div id="outputNote">
    {{#each note in model}}
    <strong>{{note.title}}</strong> <br>
    {{note.body}}
    <br>
    <br>
    {{/each}}
    {{outlet}}
  </div>
</div>
